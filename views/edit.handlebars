<div class="container">
  <form action="/expense/{{record._id}}?_method=PUT" method="POST">
    <h1 class="text-center mt-5">請修改你的支出</h1>
    <div>*必填欄位</div>
    <div class="input-group input-group-lg mb-3">

      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-lg">名稱*</span>
      </div>
      <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
        name="name" value="{{record.name}}">
    </div>
    <div class="input-group input-group-lg mb-3">

      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-lg">日期*</span>
      </div>
      <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
        name="date" value="{{record.date}}">
      <div class="input-group-append">
        calendar
      </div>
    </div>
    <div class="input-group input-group-lg mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="category">類別*</span>
        {{!-- <label for="inputState">類別</label> --}}
      </div>
      <select id="category" class="form-control" name="category">
        <option selected>{{record.category}}</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>

    <div class="input-group input-group-lg mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-lg">商家 </span>
      </div>
      <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
        name="merchant" value="{{record.merchant}}">
    </div>
    <div class="input-group input-group-lg mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-lg">金額*</span>
      </div>
      <input type="Number" class="form-control" aria-label="Sizing example input"
        aria-describedby="inputGroup-sizing-lg" name="amount" value="{{record.amount}}">
    </div>
    <div class="d-flex  justify-content-center">
      <button class="btn btn-danger" type="submit">送出</button>
    </div>
  </form>
</div>